<p>Status: <%= @pet.status %></p>
<p>Pet's name: <%= @pet.name %></p>
<p>Type of animal: <%= @pet.animal %></p>
<p>Breed of pet: <%= @pet.breed %></p>
<p>Size: <%= @pet.size %></p>
<p>Weight: <%= @pet.weight %></p>
<p>Microchip? <%= @pet.micro_chip %></p>
<p>Description: <%= @pet.description %></p>  
<p>Photo: <%= image_tag (@pet.image) %></p> 
<div id="map">

</div>
<p>Submitted by: <%= @pet.user.email %></p>
  <% if current_user.id == @pet.user_id %>  
    <h4><%= link_to "Delete", "/pets/#{@pet.id}", method: :delete %></h4>
    <h4><%= link_to "Edit", "/pets/#{@pet.id}/edit", method: :edit %><h4>
  <% end %>

    <aside class="call-to-action bg-primary">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h3>Search Lost Or Found Pet Ads.</h3>
                    <a href="/pets/?status=found" class="btn btn-lg btn-light">Search Found Pets</a>
                    <a href="/pets/?status=lost" class="btn btn-lg btn-dark">Search Lost Pets</a>
                </div>
            </div>
        </div>
    </aside>

    


    <script type="text/javascript">
  

var map;
function initMap() {
  var myLatLng = {lat: <%= @pet.latitude %>, lng: <%= @pet.longitude%>};
  map = new google.maps.Map(document.getElementById('map'), {
    center: myLatLng,
    zoom: 8
  });
 var marker = new google.maps.Marker({
    position: myLatLng,
    map: map,
    title: 'Find Me!'
  });

}
  </script>
