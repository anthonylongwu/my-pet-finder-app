<div class="row">
  <div class="col-md-6">
  <table class="table table-striped table-bordered">
    <tr>
      <td>Status:</td>
      <td><%= @pet.status %></td>
    </tr>
      <tr>
      <td>Pet's Name:</td>
      <td><%= @pet.name %></td>
    </tr>
      <tr>
      <td>Type Of Animal:</td>
      <td><%= @pet.animal %></td>
    </tr>
      <tr>
      <td>Breed:</td>
      <td><%= @pet.breed %></td>
    </tr>  <tr>
      <td>Size:</td>
      <td><%= @pet.size %></td>
    </tr>  <tr>
      <td>Weight:</td>
      <td><%= @pet.weight %></td>
    </tr>  <tr>
      <td>Micro Chip:</td>
      <td><%= @pet.micro_chip %></td>
    </tr>  <tr>
      <td>Description:</td>
      <td><%= @pet.description %></td>
    </tr>
      <tr>
      <td>Submitted By:</td>
      <td><%= @pet.user.email %></td>
    </tr>

    <% if current_user && (current_user.id == @pet.user_id )%>  
      <tr>
        <td>Delete</td>
        <td><%= link_to "Delete", "/pets/#{@pet.id}", method: :delete %></td>
      </tr>
      <tr>
        <td>Edit</td>
        <td><%= link_to "Edit", "/pets/#{@pet.id}/edit", method: :edit %></td>
      </tr>
    <% end %>

    </table>
    <div class="col-md-6">
      <div id="map">

      </div> 
    </div>
  </div>
  <div class="col-md-6">
    <div class="img-responsive">
      <% @pet.pet_images.each do |pet_image| %>
        <div class="row">
          <%= image_tag(pet_image.name) %>  
        </div>
      <% end %> 
    </div>
  </div>
</div>
  


  <aside class="call-to-action bg-primary">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h3>Search Lost Or Found Pet Ads.</h3>
          <a href="/pets/?status=found" class="btn btn-lg btn-light">Search Found Pets</a>
          <a href="/pets/?status=lost" class="btn btn-lg btn-dark">Search Lost Pets</a>
        </div>
      </div>
    </div>
  </aside>




  <script type="text/javascript">


    var map;
    function initMap() {
      var myLatLng = {lat: <%= @pet.latitude %>, lng: <%= @pet.longitude%>};
      map = new google.maps.Map(document.getElementById('map'), {
        center: myLatLng,
        zoom: 16
      });
      var marker = new google.maps.Marker({
        position: myLatLng,
        map: map,
        title: 'Find Me!'
      });

    }
  </script>
  <script async src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAcuHdZLsnxKKRI3mieJUYVcxtuzRm1qf8 &callback=initMap"></script>

